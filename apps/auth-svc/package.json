{
  "name": "auth-svc",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:dev": "nest start --watch"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "auth-svc:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "auth-svc:build:development"
          },
          "production": {
            "buildTarget": "auth-svc:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "migrate-prisma": {
        "command": "prisma migrate dev",
        "options": {
          "cwd": "apps/auth-svc"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "~18.16.9",
    "prisma": "^6.7.0",
    "tsx": "^4.19.4",
    "typescript": "~5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0"
  }
}
