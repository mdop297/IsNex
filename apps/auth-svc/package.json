{
  "name": "auth-svc",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm run generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:dev": "env-cmd -f ../../envs/auth.env npx prisma migrate dev --name update",
    "prisma-migrate": "prisma migrate dev --name update",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.9.0",
    "@kafkajs/confluent-schema-registry": "^3.9.0",
    "@nestjs/cli": "11.0.0",
    "@nestjs/common": "11.0.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.0.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "11.0.1",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "6.8.2",
    "bcryptjs": "3.0.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "dotenv-cli": "^10.0.0",
    "kafkajs": "^2.2.4",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "protobufjs": "^7.5.4",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "typescript": "5.7.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.18.0",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.1",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.7",
    "@types/cookie-parser": "1.4.8",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.13",
    "@types/node": "22.10.7",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "6.0.2",
    "env-cmd": "10.1.0",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.2",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "nodemon": "3.1.10",
    "prettier": "3.4.2",
    "prisma": "6.8.2",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "ts-proto": "^2.7.7",
    "tsconfig-paths": "4.2.0",
    "typescript-eslint": "8.20.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "@swc/core",
      "prisma"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  }
}
